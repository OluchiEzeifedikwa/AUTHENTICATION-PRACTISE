  <title>Document</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <nav>
    <ul>
      <% if (locals.authors) {%>
      <% for (let i = 0; i < authors.length; i++) { %>
        <li>
          <div class="container">AUTHOR:<%= authors[i].author %> <br> MESSAGES:<%= authors[i].messages %> <br>TITLE:<%= authors[i].title %> <br>DATE:<%= authors[i].date %> <br>CONTENT:<%= authors[i].content %></div>  
        </li>
      <% } %>
      <% } %>
      <form action="/<%= authors.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
      </form>
    </ul>
</nav>
  
</body>
</html>

    





